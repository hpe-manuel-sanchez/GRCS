    <table width="100%">
        <tr>
            <td>
                <table>
                    <tr>
                        <td style="text-align: left;">
                            Search by:
                        </td>
                        <td style="text-align: left;">
                            @Html.TextBox("ArtistName")
                        </td>
                        <td style="text-align: left">@Html.TextBox("ArtistID")
