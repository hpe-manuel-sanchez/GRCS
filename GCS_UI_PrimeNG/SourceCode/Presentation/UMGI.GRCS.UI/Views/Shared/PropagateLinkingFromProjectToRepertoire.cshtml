@using UMGI.GRCS.Resx.Resource.UIResources

@model UMGI.GRCS.UI.Models.RepertoireSearchModel
<link href="@Url.Content("/GCS/Content/SubPages/PropagateLinkingFromProjectToRepertoire.min.css")"  rel="stylesheet" type="text/css" />
<link href="@Url.Content("/GCS/Scripts/jtable/themes/standard/blue/jtable_blue.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("/GCS/Scripts/jtable/jquery.jtable.js")" type="text/javascript"></script>
<script src="@Url.Content("/GCS/Scripts/Custom/PropagateLinkingFromProjectToRepertoire.js")" type="text/javascript"></script>

<div id="contractInfo" class="topPadding contractInformation">
    <input type="hidden" id="ProProjectLinking" value="" />
    <input type="hidden" id="hidHasAssociatedRel" value="" />
    <div style="width: 25%;" class="contractFields">
        @Html.LabelFor(model => model.LinkContract.FirstOrDefault().ContractId):
        <input type="hidden" id="associatedContractId" value="@Model.LinkContract.FirstOrDefault().ContractId" />
        @Html.DisplayFor(model => model.LinkContract.FirstOrDefault().ContractId)
    </div>
    <div style="width: 15%;" class="contractFields">
        @Html.LabelFor(model => model.LinkContract.FirstOrDefault().ArtistName):
        @Html.DisplayFor(model => model.LinkContract.FirstOrDefault().ArtistName)
    </div>
    <div style="width: 20%;" class="contractFields">
        @Html.LabelFor(model => model.LinkContract.FirstOrDefault().ContractCommencementDate):
        <span id="commencementDateProj">
            @Html.DisplayFor(model => model.LinkContract.FirstOrDefault().ContractCommencementDate)</span>
    </div>
    <div style="width: 40%;" class="contractFields">
        @Html.LabelFor(model => model.LinkContract.FirstOrDefault().ClearanceCompanyCountry):
        <input type="hidden" id="associatedClearanceId" value="@Model.LinkContract.FirstOrDefault().ClearanceCompanyCountryId" />
        @Html.DisplayFor(model => model.LinkContract.FirstOrDefault().ClearanceCompanyCountry)
    </div>
</div>
<!-- div id="linkReleasePage" -->
<div>
    <!--------contract Info ends---->
    <!-- hr class="hrRep" / -->
    <div style="padding: 10px;" class="mainProjectContainer">
        <p style="margin-top: -10px; margin-bottom: 5px;">@ContractResource.ProjectToRepertoireHeader</p>
        <input type="checkbox" id="selectAllRepertoire" />@ContractResource.AllRepertoireCheckBox
        <div id="buttons">
            <input type="submit" class="primbutton confirmProjectAssociated" value="@ContractResource.ConfirmLinkButton" />
            <input type="button" class="secbutton btnSpacing cancelLink" value="@ContractResource.CancelButton" />
        </div>
        <div id="popUpaccordion">
            <div class="head">
                <input type="checkbox" id="selectProject" class="checkAll checkResources" />@ContractResource.AllCheckBox
                <span class="newHead"><a href="#" class="header">| <span style="margin-left: 15px;">
                    @Html.LabelFor(model => model.ObjProjectModel.ProjectInfo.ProjectCode):</span>
                    @Html.DisplayFor(model => model.ObjProjectModel.ProjectInfo.ProjectCode)
                    <input type="hidden" id="linkAssociatedProjectId" value="@Model.ObjProjectModel.ProjectInfo.ProjectId" />
                </a></span>
            </div>
            <!-- div id="projectContainer" -->
            <div class="projectInformation">
                <div id="projDescription contractInformation">

                    @Html.LabelFor(model => model.ObjProjectModel.ProjectInfo.Title):
                    @Html.DisplayFor(model => model.ObjProjectModel.ProjectInfo.Title)
                    @* @Html.LabelFor(model => model.ProjectSearch.Title):
                    @Html.DisplayFor(model => model.ProjectSearch.Title)*@
                    <a style="padding-left: 15px"></a>
                </div>
                <!-------Above Project Details---------->
                <div class="topPadding" style="padding: 10px;">
                    <div class="projectFields">
                        @Html.LabelFor(model => model.ObjProjectModel.ProjectInfo.ArtistName):
                        @Html.DisplayFor(model => model.ObjProjectModel.ProjectInfo.ArtistName)
                    </div>
                    @*<div class="projectFields">
                        |
                      @*  @Html.LabelFor(model => model.ObjProjectModel.ProjectInfo.Title):
                        @Html.DisplayFor(model => model.ObjProjectModel.ProjectInfo.Title)
                    </div>*@
                    <div class="projectFields">
                        |
                        @Html.LabelFor(model => model.ObjProjectModel.ProjectInfo.DataAdminCompany):
                        @Html.DisplayFor(model => model.ObjProjectModel.ProjectInfo.DataAdminCompany)
                    </div>
                    <div class="projectFields">
                        |
                        @Html.LabelFor(model => model.ObjProjectModel.ProjectInfo.Label):
                        @Html.DisplayFor(model => model.ObjProjectModel.ProjectInfo.Label)
                    </div>
                </div>
            </div>
            <!-------Above HrLine---------->

            <div style="padding: 10px;">
                <div id="releaseGrids">
                    <div id="release">
                        <h2 style="color: #143489; margin: 15px 0; padding: 0;"><span class="ui-jtable-loading" style="float: left; margin-top: -1px;"></span>
                            <span id="releaseCount">@ContractResource.ReleaseCountHeader</span> </h2>
                        <div id="releaseGrid" class="topPadding">
                        </div>
                    </div>
                    <div id="resource">
                        <h2 style="color: #143489; margin: 15px 0; padding: 0;"><span class="ui-jtable-loading" style="float: left; margin-top: -1px;"></span>
                            <span id="resourceCount">@ContractResource.ResourceCountHeader</span> </h2>
                        <div id="resourceGrid" class="topPadding">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="popUpFooter">
    <div id="bottomButtons">
        <input type="submit" class="primbutton confirmProjectAssociated" value="@ContractResource.ConfirmLinkButton" />
        <input type="submit" class="cancelLink secbutton btnSpacing" value="@ContractResource.CancelButton" />
    </div>
</div>
<style type="text/css">
    .ui-dialog .ui-dialog-content {
        overflow-x: hidden;
    }

    #buttons {
        font-size: 1.1em;
    }

    .newHead {
        display: inline-block;
        margin-top: 5px;
    }

    #popUpaccordion .head {
        background: url("/GCS/Images/blueAccordionHeaderBg.png") repeat-x scroll center top #FFFFFF;
        border: 1px solid #DCDCDC;
        cursor: pointer;
        display: block;
        font-weight: bold;
        height: 22px;
        margin: 15px 0 0;
        padding: 0;
        text-decoration: none;
        text-indent: 14px;
        color: #143489;
    }

    .contractInformation {
        width: 100%;
        height: 18px;
        padding: 6px 0 6px 15px;
        color: #143489;
        font-weight: bold;
        font-size: 1.1em;
        line-height: 1.5em;
        border-bottom: 1px solid #b2b2b2; /* IE7 */
        filter: progid:DXImageTransform.Microsoft.Gradient(GradientType=0,StartColorStr=#FFFFFFFF,EndColorStr=#FFE8E8E8); /* IE8 */
        -ms-filter: "progid:DXImageTransform.Microsoft.Gradient(GradientType=0,StartColorStr=#FFFFFFFF,EndColorStr=#FFE8E8E8)";
        background-image: -moz-linear-gradient(top, #FFFFFF 0%, #E8E8E8 100%);
        background-image: -webkit-linear-gradient(top, #FFFFFF 0%, #E8E8E8 100%);
    }

    .projectInformation {
        height: 50px;
        padding: 6px 0 6px 15px;
        color: #143489;
        font-weight: bold;
        font-size: 1.1em;
        line-height: 1.5em;
        border-bottom: 1px solid #b2b2b2; /* IE7 */
        filter: progid:DXImageTransform.Microsoft.Gradient(GradientType=0,StartColorStr=#FFFFFFFF,EndColorStr=#FFE8E8E8); /* IE8 */
        -ms-filter: "progid:DXImageTransform.Microsoft.Gradient(GradientType=0,StartColorStr=#FFFFFFFF,EndColorStr=#FFE8E8E8)";
        background-image: -moz-linear-gradient(top, #FFFFFF 0%, #E8E8E8 100%);
        background-image: -webkit-linear-gradient(top, #FFFFFF 0%, #E8E8E8 100%);
    }

    #accordion a.header {
        background: url("/GCS/Images/Acc_Arrow_Down.png") no-repeat scroll 7px 5px #F0F0F0;
    }

    #accordion a.iconBottom {
        background: url("/GCS/Images/Acc_Arrow_RIght.png") no-repeat scroll 10px 4px transparent;
    }

    .mainProjectContainer {
        overflow-y: scroll;
        position: relative;
        overflow-x: hidden;
    }

    #linkProjectToContractId {
        overflow: hidden;
    }

    #popUpFooter {
        background-color: Gray;
        height: 42px;
        line-height: normal;
        text-align: center;
        font-size: 1.1em;
    }

    #bottomButtons {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>