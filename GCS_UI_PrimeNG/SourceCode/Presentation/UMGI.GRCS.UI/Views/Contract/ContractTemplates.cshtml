@model UMGI.GRCS.UI.Models.TemplateMaintenanceModel
@using UMGI.GRCS.Resx.Resource.UIResources
@{
    ViewBag.Title = @ContractResource.ContractTemplatesHeader;   
}
@section scripts{
    <link href="@Url.Content("/GCS/Scripts/jtable/themes/standard/blue/jtable_blue.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("/GCS/Scripts/jtable/jquery.jtable.js")" type="text/javascript"></script>
    <script src="@Url.Content("/GCS/Scripts/ColumnFilter/jquery.columnfilters.js")" type="text/javascript"></script>
    <script src="@Url.Content("/GCS/Scripts/Custom/TemplateMaintenance.js")" type="text/javascript"></script>
}
<script type="text/javascript">
    var msg = '@ViewBag.Message';
    if (msg != null)
        displayDialog("Info", msg);    
</script>
<style type="text/css">
.ui-jtable-loading
{
    float:left !important;}
</style>
<div class="contractTemplates">
    
    <!-- Contract Template Header Starts -->
    <div>
    <!--<h2 class="contractTemplatesHeader">
        @ContractResource.ContractTemplatesHeader</h2>-->
        <h2 class="contractTemplatesHeader alignLeft">
        <span id="TemplateCount">  Contract Templates (0)</span></h2>
       @* <span id="TemplateAlerts"></span>*@
        <div class="ui-jtable-loading"></div>

        <div id="jqTableTemplatePager" class="alignRight" style="margin:10px 0;">
            @ContractResource.ShowDropDown
            @Html.DropDownListFor(model => model.ItemsPerPage, Model.ItemsPerPage)
           @ContractResource.itemsperpage
        </div>
    </div>
    <!-- Contract Template Header ends -->
    
    <div class="clear">
    </div>
    <div>
        <div id="ContractTemplatesTable">
        </div>
         <div id="TemplateSelectList">
        </div>
         @section BottomInputs{
        <div class="editor-field alignRight editBtnContainer">
            <input id="EditTemplate" runat="server" type="submit" class="primbutton" value=" @ContractResource.EditButton" />
            <input id="DeleteTemplate" runat="server" type="submit" class="secbutton btnSpacing" value=" @ContractResource.DeleteButton"  />
            
        </div>
        }
    </div>
</div>
