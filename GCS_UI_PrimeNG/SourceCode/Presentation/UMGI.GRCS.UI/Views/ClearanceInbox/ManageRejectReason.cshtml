@model UMGI.GRCS.UI.Models.ClearanceRejectModel
@{
    Layout = "/GCS/Views/Shared/_ClearenceLayout.cshtml";
    ViewBag.Title = "Manage Pre-Defined Reject Reason";
}
<!DOCTYPE html>
<script src="@Url.Content("/GCS/Scripts/Custom/ManageRejectReason.js")" type="text/javascript"></script>
<style type="text/css">
    .wrapper {
        overflow: hidden;
        width: 100%;
    }

    .widthJt1 {
        width: 85%;
    }

    .widthJt2 {
        width: 14%;
    }

    .widthJt3 {
        width: 10%;
    }

    table.jtable {
        width: 99%;
        margin: 0px;
        padding: 0px;
    }

    .jtableDv {
        margin: 10px 15px;
    }

    .predefined_rejection_textarea {
        width: 99% !important;
        *width: 92% !important;
        padding: 0 !important;
    }

    .marg {
        margin-top: 4.6%;
        *margin-top: 3.9%;
    }

    .fontsize11 {
        font-size: 11px;
    }

    .applicalbleTo {
        margin: 0px;
        padding: 0px;
    }

        .applicalbleTo li {
            list-style: none;
            font-weight: bold;
        }

    .applicalbleTo1 {
        margin: 0px;
        padding: 0px;
    }

        .applicalbleTo1 li {
            list-style: none;
            font-weight: bold;
            vertical-align: bottom;
            display: inline-block;
            *display: inline;
            overflow: auto;
        }

    .li-width1 {
        width: 89%;
    }

    .li-width2 {
        width: 15%;
    }

    .savebtn {
        background: url('/Gcs/Images/save.png') no-repeat;
    }

    .editbtn {
        background: url('/Gcs/Images/edit.png') no-repeat;
    }

    .deletebtn {
        background: url('/Gcs/Images/delete.png') no-repeat;
    }

    .undobtn {
        background: url('/Gcs/Images/release_undo_changes.png') no-repeat;
    }

    #txtReasnNum {
        height: auto;
    }

    ul li {
        padding-top: 0 !important;
    }

    #btnEditReasn,
    #btnDeleteReasn,
    #btnSaveReasn {
        width: 21px !important;
        height: 24px !important;
        float: left;
        margin-left: 5px;
        padding-top: 15px;
    }

    #btnUndoReasn {
        width: 26px !important;
        height: 24px !important;
        float: left;
        margin-left: 5px;
        padding-top: 15px;
    }

    #txtReason {
        width: 450px !important;
    }

    table.jtable td {
        vertical-align: middle !important;
    }
</style>
<html>
<head>
    <title>Manage Pre-defined Rejection Reason</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div id="errorMessage" class="warning" style="margin: 10px 0;">
        </div>
        <div style="padding: 10px 0 0 15px">
            <table class="jtable" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th class="widthJt1" style="background-color: #485472; color: #fff;">
                            @UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.RejectReasonHeader1
                        </th>
                        <th class="widthJt2" style="background-color: #485472; color: #fff;">
                            @UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.RejectReasonHeader2
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="wrapper">
                                <div class="floatL widthJt1 fontsize11">
                                    <div class="clearBoth">
                                    </div>
                                    <span class="labelbold clear fontsize11">@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.RejectReasonLabel</span>
                                    <div class="clearBoth">
                                    </div>
                                    <ul class="applicalbleTo1">
                                        <li style="visibility: hidden;">@Html.TextBox(@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.ReasonNoLabel, 0, new { @style = "width:20px !important", @id = "txtReasnNum", maxlength = "3" })</li>
                                        <li class="li-width1">
                                            @Html.TextArea(@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.ReasonTextLabel, new { @id = "txtAreaReason", @style = "width: 450px !important;vertical-align:bottom" })
                                            <input type="button" id="btnAddReasn" value="@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.AddButton" class="plbutton" style="margin-bottom: 2px;" />
                                        </li>
                                    </ul>
                                    <div class="clearBoth">
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="clearBoth">
                            </div>
                            <ul class="applicalbleTo fontsize11">
                                @Html.CheckBox(@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.MarketingCheckBoxLabel, true, new { @id = "chkMarktng" })<b>Marketing</b>
                                <br />
                                @Html.CheckBox(@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.LegalCheckBoxLabel, true, new { @id = "chkLegal" })<b>Legal</b>
                                <br />
                                @Html.CheckBox(@UMGI.GRCS.Resx.Resource.UIResources.ClearenceResource.UMGICheckBoxLabel, true, new { @id = "chkUMGI" })<b>UMGI</b>
                            </ul>
                        </td>
                    </tr>
                    @for (int i = 0; i < Model.RejectReasonList.Count; i++)
                    {
                        <tr>
                            <td>
                                <div class="wrapper">
                                    <div class="floatL widthJt1 fontsize11">
                                        <ul class="applicalbleTo1">
                                            <li style="float: left;">
                                                <div style="float: left; width: 30px;">
                                                    @Html.TextBoxFor(m => m.RejectReasonList[i].Sequence_No, new { @style = "width:20px !important; display:none;margin-top:15px;", @id = "txtReasonNum", maxlength = "3" })
                                                    <div id="lblReasonNum" style="width: 20px !important; padding-left: 10px !important; margin-top: 15px;">@Model.RejectReasonList[i].Sequence_No
                                                    </div>
                                                </div>
                                                <div style="float: right">
                                                    @Html.TextAreaFor(m => m.RejectReasonList[i].RejectReason, new { @id = "txtReason", @style = "width: 450px !important; display:none" })
                                                    <div id="lblRejectReason" style="width: 460px !important; margin-top: 15px;">@Model.RejectReasonList[i].RejectReason</div>
                                                </div>
                                            </li>
                                            <li class="li-width2" style="margin-top: 10px;">
                                                <input type="button" id="btnEditReasn" class="editbtn" />
                                                <input type="button" id="btnDeleteReasn" class="deletebtn" />
                                                <input type="button" id="btnSaveReasn" class="savebtn" style="display: none" />
                                                <input type="button" id="btnUndoReasn" class="undobtn" style="display: none" />
                                            </li>
                                        </ul>
                                        <div class="clearBoth">
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <ul class="applicalbleTo fontsize11">
                                    <li>
                                        @Html.CheckBoxFor(m => m.RejectReasonList[i].IsMarktng, new { @disabled = true, @id = "chckMarktng" })<b>Marketing</b>
                                    </li>
                                    <li>
                                        @Html.CheckBoxFor(m => m.RejectReasonList[i].IsLegal, new { @disabled = true, @id = "chckLegal" })<b>Legal</b>
                                    </li>
                                    <li>
                                        @Html.CheckBoxFor(m => m.RejectReasonList[i].IsUMGI, new { @disabled = true, @id = "chckUMGI" })<b>UMGI</b>
                                    </li>
                                    @Html.HiddenFor(m => m.RejectReasonList[i].ReasonId, new { @id = "hdnReasonId" })
                                    <div id="modDateTime" style="visibility: hidden">@Model.RejectReasonList[i].Modified_Dttm</div>
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</body>
</html>
<script type="text/javascript">

    function applyCustomTheam() {
        var docHeight = $(window).height();
        var headerHeight = 60;
        var footerHeight = 45;

        var mainContainerHeight = docHeight - headerHeight - footerHeight;

        $("#main").css({
            "height": mainContainerHeight + "px",
            "overflow": "auto",
            "overflowX": "hidden",
            "position": "relative"
        });

    }
    applyCustomTheam();
</script>